{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "./packages/*/src/**/*.ts",
    "./packages/*/src/**/*.d.ts",
    "./packages/*/src/**/*.tsx",
    "./packages/*/src/**/*.vue",
    "./components/**/*.ts",
    "./components/**/*.d.ts",
    "./components/**/*.tsx",
    "./components/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
