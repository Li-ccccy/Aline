{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/**/*.tsx",
    "./**/*.vue",
    "./types/*.d.ts"
  ],
  "exclude": ["./node_modules/**"]
}
