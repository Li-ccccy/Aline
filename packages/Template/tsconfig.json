{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "esModuleInterop": true
  },
  "include": [
    "./*.d.ts",
    "./*.ts",
    "./**/*.tsx",
    "vue.d.ts",
    "src/*.d.ts",
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/types/*.ts",
    "src/types/*.d.ts"
, "src/view/home/home.jsx", "src/view/home/index.jsx"  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
